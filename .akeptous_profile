#!/usr/bin/env zsh

# ---------
# Settings
# ---------

# NOTE: Golang setup
export GOPATH="/usr/local/bin"
export GOBIN="$GOPATH"
export PATH="$PATH:$GOBIN"

if [[ "$(uname)" == "Darwin" ]]; then
    # NOTE: User
    export CURRENT_USER=brahayanxavier
    # NOTE: Scala setup
    export PATH="$PATH:/Users/brahayanxavier/Library/Application Support/Coursier/bin"
    # NOTE: Java setup
    export JAVA_HOME="$HOME/Library/Caches/Coursier/arc/https/cdn.azul.com/zulu/bin/zulu17.58.21-ca-jdk17.0.15-macosx_aarch64.tar.gz/zulu17.58.21-ca-jdk17.0.15-macosx_aarch64"
fi

# NOTE: User
[[ "$(uname)" == "Linux" ]] && export CURRENT_USER=bxsr
