#!/usr/bin/env zsh

# ---------
# Settings
# ---------
# NOTE: Bun setup
[ -s "$HOME/.bun/_bun" ] && source "$HOME/.bun/_bun"
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# NOTE: Golang setup
export GOPATH="/usr/local/bin"
export GOBIN="$GOPATH"
export PATH="$PATH:$GOBIN"
export CURRENT_USER=brahayanxavier
