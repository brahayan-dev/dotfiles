#!/usr/bin/env zsh

# ---------
# Settings
# ---------
export WORKSPACE="akeptous"

# NOTE: Golang setup
export GOPATH="/usr/local/bin"
export GOBIN="$GOPATH"
export PATH="$PATH:$GOBIN"

# NOTE: Node.js setup
[[ -e "$HOME/nvm/nvm.sh" ]] && source "$HOME/.nvm/nvm.sh"

# NOTE: Aider setup
source $HOME/.local/bin/env

if [[ "$(uname)" == "Darwin" ]]; then
    # NOTE: User
    export CURRENT_USER=brahayanxavier
    # NOTE: Path to binaries on Brew
    export PATH="/opt/homebrew/bin:$PATH"
    # NOTE: Java setup
    export JAVA_HOME="$HOME/Library/Caches/Coursier/arc/https/github.com/adoptium/temurin23-binaries/releases/download/jdk-23.0.2%252B7/OpenJDK23U-jdk_aarch64_mac_hotspot_23.0.2_7.tar.gz/jdk-23.0.2+7/Contents/Home"
fi

if [[ "$(uname)" == "Linux" ]]; then
    # NOTE: User
    export CURRENT_USER=bxsr
    # NOTE: Other configurations
    export PATH="$HOME/.local/bin:$PATH"
fi
